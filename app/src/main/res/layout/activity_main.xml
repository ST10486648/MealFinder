<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter a time of day:"
            android:textColor="@color/lightText"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/timeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Morning, Mid-morning snack"
            android:background="@drawable/edittext_bg"
            android:textColor="@color/lightText"
            android:textColorHint="#bdc3c7"
            android:inputType="text" />

        <Button
            android:id="@+id/suggestButton"
            style="@style/StyledButton"
            android:text="Suggest Meal" />

        <Button
            android:id="@+id/clearButton"
            style="@style/StyledButton"
            android:text="Clear"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/lightText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/mealImageView"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="Meal Image"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/acceptableInputsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:padding="8dp"
            android:text="Acceptable inputs will be listed here." />

    </LinearLayout>
</ScrollView>
